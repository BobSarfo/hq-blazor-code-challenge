@page "/CCForm"

<section>
              @*<InputText @bind-Value="@CreditCard.Number" @bind:event="oninput" maxlength = "16"  id="form6Example3" class="form-control" />*@

    <div class="flex row">
      
        <div class="col d-flex justify-content-center">
            <div class="card m-10">
            <div class="card-body push-up mb-3">

                <Card CardProviderImg="@CardProviderImg"
                CreditCard="@CreditCard" />
                <EditForm Model="@CreditCard">
                     <DataAnnotationsValidator />
                     <ValidationSummary />
                       <!-- Card Number -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example3">Card Number</label>
                        <InputText @bind-Value="@CreditCard.Number" @oninput="@MatchCreditCard" OnValidSubmit="@HandleValidSubmit" type="text" maxlength = "16"  id="form6Example3" class="form-control" />
                    </div>
                      <!-- Card Name -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example4">Card Name</label>
                        <InputText @bind-Value="@CreditCard.Name"   @oninput="@UpdateName"  maxlength = "30" id="form6Example4" class="form-control" />
                    </div>
                    <!--Month-->
                    <div class="row mb-4">
                      <div class="col">
                        <div class="form-outline">
                          <label class="form-label" for="formNameOnCard">Expiration Date</label>
                          <InputSelect  class="form-control" @bind-Value="@CreditCard.ExpireMonth" >
                                @if (@_months != null)
                                {
                                    @for (int i = 1; i < @_months.Count(); i++)
                                    {
                                        <option value="@_months[i]">@_months[i]</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                      </div>
                    <!--Year-->
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="ExpirationDate">.</label>
                                <InputSelect class="form-control" placeholder="" @bind-Value="@CreditCard.ExpireYear">
                                    @if (@_years != null)
                                    {
                                        @for (int i = 0; i < @_years.Count(); i++)
                                        {
                                            <option value="@_years[i]">@_years[i]</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>
                    <!--CVV-->
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="formCVV" >CVV</label>
                                <InputNumber @bind-Value="@CreditCard.CVV" maxlength = "4"  type="number" id="formCardNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">
                      Submit
                    </button>
                </EditForm> 
                </div>
                </div>
            </div>
        </div>



</section>



